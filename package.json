{
  "name": "shaple-builder-chatbot",
  "version": "0.1.0",
  "private": true,
  "license": "ISC",
  "scripts": {
    "build:next-prod": "cross-env APP_ENV=prod next build",
    "build:next-dev": "cross-env APP_ENV=dev next build",
    "build:next": "run-p build:next-prod build:next-dev",
    "build:wss": "tsc --project tsconfig.wss.json",
    "clean:wss": "rimraf dist",
    "clean:next": "rimraf .next",
    "migrate:prisma": "cross-env NODE_ENV=development prisma migrate dev",
    "dev:next": "cross-env APP_ENV=dev next dev",
    "dev:wss": "cross-env PORT=3001 NODE_ENV=development tsx watch src/server/wss.ts --tsconfig tsconfig.wss.json ",
    "dev": "run-p dev:*",
    "build": "run-s build:next build:wss",
    "clean": "run-s clean:*",
    "start:next": "cross-env NODE_ENV=production next start",
    "start:wss": "cross-env PORT=3001 NODE_ENV=production tsx src/server/wss.ts --tsconfig tsconfig.wss.json",
    "start": "run-p start:*",
    "docker:build": "docker build -t icn.ocir.io/axqafkgb0llg/shaple-builder-web:latest . --platform=linux/amd64",
    "docker:push": "docker push icn.ocir.io/axqafkgb0llg/shaple-builder-web:latest",
    "docker": "run-s docker:*",
    "test:setup:kind": "cd stoacloud && docker build -t stoacloud/stoacloud:latest . && make setup-test && kind load docker-image stoacloud/stoacloud:latest --name kind --verbosity 1",
    "test:setup:stoacloud": "kubectl --context kind-kind apply -f testdata/k8s/stoacloud && kubectl wait --context kind-kind --namespace default --for=condition=ready pod --selector=app=shaple-builder --timeout=60s",
    "test:setup": "run-s test:setup:kind test:setup:stoacloud",
    "test:teardown": "run-s test:teardown:stoacloud",
    "test:teardown:stoacloud": "cd stoacloud && make teardown-test",
    "test": "jest",
    "format:prisma": "prisma format",
    "format:prettier": "prettier --write src",
    "format": "run-s format:*",
    "lint": "next lint"
  },
  "dependencies": {
    "@shaple/auth-helpers-nextjs": "^0.0.7",
    "@shaple/auth-helpers-shared": "^0.0.10",
    "@shaple/shaple": "^0.2.2",
    "@grpc/grpc-js": "^1.10.1",
    "@grpc/proto-loader": "^0.7.10",
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "@next/env": "^14.1.2",
    "@prisma/client": "^5.13.0",
    "@shaple/shaple": "^0.2.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tanstack/react-query": "^4.35.3",
    "@trpc/client": "^10.45.1",
    "@trpc/react-query": "^10.45.1",
    "@trpc/server": "^10.45.1",
    "@typescript-eslint/parser": "^7.8.0",
    "autoprefixer": "^10.0.1",
    "classnames": "^2.5.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "lodash": "^4.17.21",
    "next": "14.1.0",
    "npm-run-all": "^4.1.5",
    "openai": "^4.40.0",
    "pg": "^8.11.5",
    "pg-boss": "^9.0.3",
    "prisma": "^5.13.0",
    "react": "^18",
    "react-dom": "^18",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "reflect-metadata": "^0.2.1",
    "remark-gfm": "^4.0.0",
    "rimraf": "^5.0.5",
    "superjson": "^2.2.1",
    "tsx": "^4.7.1",
    "typedi": "^0.10.0",
    "typescript": "^5",
    "winston": "^3.13.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/pg": "^8.11.6",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/winston": "^2.4.4",
    "@types/ws": "^8.5.10",
    "babel-jest": "^29.7.0",
    "eslint": "^7.23.0 || ^8.0.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-expect-message": "^1.1.3",
    "jsdom": "^24.0.0",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2"
  }
}
